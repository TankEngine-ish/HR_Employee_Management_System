{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs", // Change this for Jest compatibility
    "moduleResolution": "node", // Use "node" for better Jest support
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx", // Update this for better JSX support
    "types": ["jest", "node"], // Ensure Jest and Node types are included
    "incremental": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}

