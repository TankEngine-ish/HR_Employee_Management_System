pipeline {
    agent any
    environment {
        // Jenkins credentials for Docker Hub
        DOCKER_USERNAME = credentials('dockerhub-username') // Replace with your Docker Hub username credential ID in Jenkins
        DOCKER_PASSWORD = credentials('dockerhub-password') // Replace with your Docker Hub password credential ID in Jenkins
        DOCKER_REPO = 'tankengine' // Docker Hub repository namespace
    }
    stages {
        stage('Checkout Code') {
            steps {
                // Clone the main branch of your GitHub repository
                git branch: 'main', url: 'https://github.com/TankEngine-ish/property_management_system_full_stack_app'
            }
        }

        stage('Run Unit Tests') {
            parallel {
                stage('Go Unit Tests') {
                    steps {
                        dir('backend') {
                            // Run Go tests
                            sh 'go test ./... -v'
                        }
                    }
                }
                stage('Frontend Unit Tests') {
                    steps {
                        dir('frontend') {
                            // Install dependencies and run tests for the frontend
                            sh 'npm install'
                            sh 'npm test'
                        }
                    }
                }
            }
        }

        stage('Run E2E Tests') {
            steps {
                // Build the frontend from the frontend directory
                sh 'npm run build --prefix frontend'
                // Run Cypress tests from the root directory
                sh 'xvfb-run npx cypress run'
            }
        }

        stage('Build Docker Images') {
            steps {
                // Build all Docker images using docker-compose
                sh 'docker-compose build'
            }
        }

        stage('Push Docker Images') {
            steps {
                // Log in to Docker Hub and push Docker images
                sh """
                docker login -u $DOCKER_USERNAME -p $DOCKER_PASSWORD

                docker tag nextapp:latest ${DOCKER_REPO}/nextapp:latest
                docker push ${DOCKER_REPO}/nextapp:latest

                docker tag goapp:latest ${DOCKER_REPO}/goapp:latest
                docker push ${DOCKER_REPO}/goapp:latest

                docker tag postgres:latest ${DOCKER_REPO}/postgres:latest
                docker push ${DOCKER_REPO}/postgres:latest
                """
            }
        }
    }
    post {
        always {
            echo 'Pipeline completed!'
        }
        success {
            echo 'Pipeline succeeded!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
